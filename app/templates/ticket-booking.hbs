<div class="container">
		<div class="col-md-8">
			{{ticket-table seats=model.seats 
			calculateAvailSeat='updateAvailableTicketCountAction' 
			calculateBookedSeat='updateBookedSeatsCountAction'}}
		</div>

		<div class="col-md-4">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Status</h3>
			  </div>
			  <div class="panel-body">
			  	<div>Total seats: {{model.totalSeatsCount}}</div>
			  	<div class='selectedText'>Available tickets: {{model.availableTicketsCount}}</div>
			  	<div class='bookedText'>Already booked tickets: {{model.bookedSeatsCount}}</div>
			  </div>
			</div>
		</div>

		{{#if (gt model.selectedTicketsCount 0)}}
		<div class="col-md-4">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Bill</h3>
			  </div>
			  <div class="panel-body">
			  	<div class='selectedText'>Selected tickets: {{model.selectedTicketsCount}} * Rs 100</div>
			  	<div class='selectedText total'>Total amount: Rs {{model.totalAmount}}</div>
			  </div>
			</div>
		</div>
		{{/if}}

</div>